#! /bin/sh

exec=$(/bin/basename $0)
input=$1
output=$2

if [ -z "${input}" ]
then
	/bin/echo 'missing input file'
	exit 1
fi

if [ -z "${output}" ]
then
	/bin/echo 'missing output file'
	exit 1
fi

cmd_line="./$exec $input $output"


/bin/echo "trying step 1 of $cmd_line"
sleep 1
/bin/uname -a   > $output

/bin/echo "trying step 2 of $cmd_line"
sleep 1
/bin/cat $input >> $output

/bin/echo "trying step 3 of $cmd_line"

/bin/echo 'an error! oh no!'
exit 1

sleep 1
/bin/date       >> $output

/bin/echo "end of $cmd_line"

